{
  "compilerOptions": {
    "lib": [
      "DOM"
    ],
    "outDir": "build",
    "target": "ES3",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": ["src/index.ts"],
  "include": ["src/"]
}